{
  "manifest_version": 2,

  "name": "On-hover speech synthesizer",
  "description": "This extension allows the user to speak the mouse hovered text on the webpage",
  "version": "1.0",
  //  "icons": {
  //   "128": "images/icon128.png"
  //   // "48": "icon48.png",
  //   // "16": "icon16.png"
  // },

  // "background": {
  //   "scripts": ["popup.js"]
  // },

  "browser_action": {
    "default_icon": "images/chromeext.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "tabs",
        "notifications",
        "http://*/",
        "https://*/"
  ]
}