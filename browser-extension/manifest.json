{
  "manifest_version": 2,

  "name": "On-hover speech synthesizer",
  "description": "This extension allows the user to speak the mouse hovered text on the webpage",
  "version": "1.0",
   "icons": {
    "128": "images/icon128.png",
    "48": "images/icon48.png"
    },

  "background": {
    "scripts": ["file/jquery-3.3.1.min.js","script.js"],
    "persistent": false
  },

  "content_scripts": 
    [
        {
            "matches": [ "http://*/*", "https://*/*"],
            "js":["file/jquery-3.3.1.min.js", "script.js"],
            "run_at": "document_end"
        }
    ],
 
  //  "content_scripts": [ {
  //   "js": [ " ","popup.js", "script.js" ],
  //   "matches": [ "http://*/*", "https://*/*"]
  // }],

  "browser_action": {
    "default_icon": "images/icon16.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "notifications",
    "webNavigation",
    "http://*/",
    "https://*/"
  ]
}
